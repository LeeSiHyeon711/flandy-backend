                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "기획서 작성"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Q1 마케팅 기획서 작성"
                                    },
                                    "start_time": {
                                        "type": "string",
