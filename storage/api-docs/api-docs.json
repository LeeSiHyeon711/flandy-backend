                    },
                    "start_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-15T09:00:00Z"
                    },
                    "deadline": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-20T18:00:00Z"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
